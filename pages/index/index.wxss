.section{
  width: 80%;
  height: 60rpx;
  border: 1px solid #f2f2f0;
  margin-left: 10%;
  border-radius:25px; 
  text-align: center;
  font-size: 13px;
 
}

.slide-image{
  width: 100%;
  
}
.group{
  width: 100%;
  height: 20px;
  font-size: 12px;
  display: flex;
  flex-wrap:nowrap;
  justify-content: space-around; 
  
  line-height: 20px;

}
.nav{
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 13px;
}
.nav .nav1{
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.nav image{
  width: 60rpx;
  height: 60rpx;
}

.title{
  width: 100%;
  height:100rpx;
  border-bottom:1px solid #f2f2f0;
  border-top: 5px solid #f2f2f0;
  line-height: 100rpx;
  padding-left: 10px;
  font-size: 15px; 
}
.sco{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  
}
.com{
  width: 300rpx;
  height: 450rpx;
  border: 1px solid #f2f2f0;
  float: left;
  margin-left: 40rpx;
  margin-top: 40rpx;
  position: relative;
}
.com image{
  height: 50%;
  width: 100%
}
.txt1{
  font-size: 10px;
  display: inline-block;
  height: 150rpx;
}
.txt2{
  font-size: 14px;
  color: rgb(248, 107, 14);
}
.detail{
  background: red;
  color: white;
  width:140rpx;
  height: 60rpx;
  font-size: 14px;
  position: absolute;
  top: 194px;
  left: 75px;
  border-radius:25px; 

}